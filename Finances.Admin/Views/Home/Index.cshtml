        </div>
    </div>
    <div class="col-lg-3 col-md-6 col-sm-12">
        <div class="card">
            <div class="body">
                <div class="form-group mb-4">
                    <label class="d-block">Cartão de crédito <span class="float-right">77% <i class="fa fa-long-arrow-up"></i></span></label>
                    <div class="progress progress-xxs">
                        <div class="progress-bar bg-azura" role="progressbar" aria-valuenow="77" aria-valuemin="0" aria-valuemax="100" style="width: 77%;"></div>
                    </div>
                </div>
                <div class="form-group mb-4">
                    <label class="d-block">Água <span class="float-right">50% <i class="fa fa-long-arrow-up"></i></span></label>
                    <div class="progress progress-xxs">
                        <div class="progress-bar bg-danger" role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" style="width: 50%;"></div>
                    </div>
                </div>
                <div class="form-group mb-4">
                    <label class="d-block">Luz <span class="float-right">23% <i class="fa fa-long-arrow-up"></i></span></label>
                    <div class="progress progress-xxs">
                        <div class="progress-bar bg-green" role="progressbar" aria-valuenow="23" aria-valuemin="0" aria-valuemax="100" style="width: 23%;"></div>
                    </div>
                </div>
                <div class="form-group mb-4">
                    <label class="d-block">Internet <span class="float-right">78% <i class="fa fa-long-arrow-up"></i></span></label>
                    <div class="progress progress-xxs">
                        <div class="progress-bar bg-indigo" role="progressbar" aria-valuenow="78" aria-valuemin="0" aria-valuemax="100" style="width: 78%;"></div>
                    </div>
                </div>
                <div class="form-group mb-4">
                    <label class="d-block">Hobbies <span class="float-right"> 33% <i class="fa fa-long-arrow-up"></i></span></label>
                    <div class="progress progress-xxs">
                        <div class="progress-bar bg-orange" role="progressbar" aria-valuenow="33" aria-valuemin="0" aria-valuemax="100" style="width: 33%;"></div>
                    </div>
                </div>
                <div class="form-group mb-2">
                    <label class="d-block">Outros <span class="float-right">88% <i class="fa fa-long-arrow-up"></i></span></label>
                    <div class="progress progress-xxs">
                        <div class="progress-bar bg-red" role="progressbar" aria-valuenow="88" aria-valuemin="0" aria-valuemax="100" style="width: 88%;"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-3 col-md-6 col-sm-12">
        <div class="card">
            <div class="body">
                <div id="expenses-pie" style="height: 300px"></div>
            </div>
        </div>
    </div>

    <div class="col-lg-6 col-md-12 col-sm-12">
        <div class="card">
            <div class="header">
                <h2>Entradas vs Saídas</h2>
            </div>
            <div class="body">
                <div id="chart-in-vs-out"></div>
            </div>
        </div>
    </div>
</div>

@section Scripts {

    <script>
        $(document).ready(function () {

            $error = '@ViewData["error"]';
            $success = '@ViewData["success"]';

            if($error != null && $error != ''){
                $context = 'error';
                $message = $error;
                $position = 'top-center';

                if ($context === '') {
                    $context = 'info';
                }

                if($message === ''){
                    $message = 'Tudo certo!';
                }

                if ($position === '') {
                    $positionClass = 'toast-bottom-right';
                } else {
                    $positionClass = 'toast-' + $position;
                }

                toastr.remove();
                toastr.options.closeButton = true;
                toastr[$context]($message, '', {
                    positionClass: $positionClass
                });
            }
        });

        c3.generate({
            bindto: '#chart-in-vs-out',
            data: {
                columns: [
                    ['Incomings', 13.9, 14.2, 15.7, 18.5, 21.9, 15.2, 17.0, 16.6, 24.2, 39.3, 31.6, 44.8],
                    ['Outgoings', 7.0, 6.9, 9.5, 14.5, 18.4, 21.5, 25.2, 21.5, 23.3, 18.3, 13.9, 9.6]
                ],
                labels: true,
                type: 'line',
                colors: {
                    'Incomings': '#5EBA00', // Green
                    'Outgoings': '#DC3545' // Red
                },
                names: {
                    'Incomings': 'Entradas',
                    'Outgoings': 'Saídas'
                }
            },
            axis: {
                x: {
                    type: 'category',
                    categories: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sept', 'Oct', 'Nov', 'Dec']
                },
            },
            legend: {
                show: true
            },
            padding: {
                bottom: 20,
                top: 0
            } 
        });

        c3.generate({
        bindto: '#expenses-pie',
        data: {
            columns: [
                ['data1', 63],
                ['data2', 44],
                ['data3', 12],
                ['data4', 14]
            ],
            type: 'pie',
            colors: {
                'data1': '#007FFF',
                'data2': '#DC3545',
                'data3': '#5CB65F',
                'data4': '#9367B4'
            },
            names: {
                'data1': 'Cartão de crédito',
                'data2': 'Água',
                'data3': 'Luz',
                'data4': 'Internet',
            }
        },
        axis: {
        },
        legend: {
            show: true
        },
        padding: {
            bottom: 20,
            top: 0
        },
    });

    </script>
}