            <h1>@bread[bread.Length - 1]</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index","Home")">In√≠cio</a>
                    </li>
                    @foreach(string item in bread)
                    {
                        <li class="breadcrumb-item active" aria-current="page">
                            @item
                        </li>
                    }
                </ol>
            </nav>
        </div>            
