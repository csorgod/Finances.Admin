<div id="left-sidebar" class="sidebar">
    <div class="navbar-brand">
        <a href="javascript:void(0);" style="cursor: default;">
            <img src="~/images/icon.svg" alt="Finances Logo" class="img-fluid logo">
            <span>FINANCES</span>
        </a>
        <button type="button" class="btn-toggle-offcanvas btn btn-sm float-right"><i class="lnr lnr-menu fa fa-chevron-circle-left"></i></button>
    </div>
    <div class="sidebar-scroll">
        <div class="user-account">
            <div class="user_div">
                <img src="~/images/user.png" class="user-photo" alt="User Profile Picture">
            </div>
            <div class="dropdown">
                <span>Bem vindo,</span>
                <a href="javascript:void(0);" class="dropdown-toggle user-name" data-toggle="dropdown"><strong>@Model.UserLogged.Name @Model.UserLogged.LastName</strong></a>
                <ul class="dropdown-menu dropdown-menu-right account vivify flipInY">
                    <li><a href="@Url.Action("Profile", "User")"><i class="icon-user"></i>Meu perfil</a></li>
                    <li><a href="app-inbox.html"><i class="icon-envelope-open"></i>Mensagens</a></li>
                    <li><a href="javascript:void(0);"><i class="icon-settings"></i>Configurações</a></li>
                    <li class="divider"></li>
                    <li><a href="page-login.html"><i class="icon-power"></i>Sair</a></li>
                </ul>
            </div>
        </div>
        <nav id="left-sidebar-nav" class="sidebar-nav">
            <ul id="main-menu" class="metismenu">
                <li class="header">Controle</li>
                <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")">
                    <a href="@Url.Action("Index","Home")">
                        <i class="icon-speedometer"></i>
                        <span>Dashboard</span>
                    </a>
                </li>
                <li class="header">Cadastros</li>
                <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Favoreds" ? "active" : "")">
                    <a href="@Url.Action("Favoreds","Home")">
                        <i class="icon-users"></i>
                        <span>Favorecidos</span>
                    </a>
                </li>
                <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "BillsToPay" || ViewContext.RouteData.Values["Action"].ToString() == "PaidBills" ? "active" : "")">
                    <a href="#uiElements" class="has-arrow">
                        <i class="icon-notebook"></i>
                        <span>Contas</span>
                    </a>
                    <ul>
                        <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "BillsToPay" ? "active" : "")">
                            <a href="@Url.Action("BillsToPay","Home")">A pagar</a>
                        </li>
                        <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "PaidBills" ? "active" : "")">
                            <a href="@Url.Action("PaidBills","Home")">Pagas</a>
                        </li>

                    </ul>
                </li>
                <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Incomings" ? "active" : "")">
                    <a href="@Url.Action("Incomings","Home")">
                        <i class="icon-wallet"></i>
                        <span>Rendas</span>
                    </a>
                </li>
                <li class="header">Relatórios</li>
                <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Statistics" ? "active" : "")">
                    <a href="@Url.Action("Statistics","Home")">
                        <i class="icon-pie-chart"></i>
                        <span>Estatisticas</span>
                    </a>
                </li>
                <li class="header">Administração</li>
                <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Users" ? "active" : "")">
                    <a href="@Url.Action("Users","Home")">
                        <i class="icon-user"></i>
                        <span>Usuários</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</div>